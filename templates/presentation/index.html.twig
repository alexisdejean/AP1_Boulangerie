{% extends 'base.html.twig' %}

{% block title %}Présentation{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="card text-white bg-primary mb-3">
        <div class="card-body">

            {# Affichage de l'image si elle existe #}
            {% if presentation.imagePresentation %}
                <img src="/{{ presentation.imagePresentation }}" 
                     alt="Image de présentation" 
                     class="img-fluid mb-3" 
                     style="max-height: 300px; object-fit: cover;">
            {% endif %}

            {% if is_granted('ROLE_ADMIN') and form %}
                {{ form_start(form) }}
                    {{ form_widget(form.descriptionPresentation) }}
                    {{ form_widget(form.imageFile, {'attr': {'class': 'mt-2'}}) }}
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-warning mt-2'}}) }}
                {{ form_end(form) }}
            {% else %}
                <p class="card-text">{{ presentation.descriptionPresentation }}</p>
            {% endif %}

        </div>
    </div>
</div>
{% endblock %}
