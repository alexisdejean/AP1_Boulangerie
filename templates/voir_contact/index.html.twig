                <th>Commentaire</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.utilisateurContact.identifiant }}</td>
                    <td>{{ contact.numeroContact }}</td>
                    <td>{{ contact.demandeContact }}</td>
                    <td>{{ contact.dateContact ? contact.dateContact|date('d/m/Y H:i') : '' }}</td>
                    <td>-</td> </tr>
